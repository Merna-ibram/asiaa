<odoo>
    <!-- Form View للـ Wizard -->
    <record id="view_doctor_invoice_wizard_form" model="ir.ui.view">
        <field name="name">doctor.invoice.wizard.form</field>
        <field name="model">doctor.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="الفواتير الخاصة بالدكتور">
                <group>
                    <field name="month"/>
                    <field name="year"/>
                </group>
                <footer>
                    <button name="action_generate_report_invoice"
                            string="طباعة التقرير"
                            type="object"
                            class="btn-primary"/>
                    <button string="إلغاء"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action لفتح الـ Wizard -->
    <record id="action_doctor_invoice_wizard" model="ir.actions.act_window">
        <field name="name">الفواتير الخاصة للدكتور</field>
        <field name="res_model">doctor.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- قائمة للوصول للـ Wizard -->
    <menuitem id="menu_doctor_invoice_report"
              name="الفواتير الخاصة بالدكتور"
              parent="account.menu_finance"
              action="action_doctor_invoice_wizard"
              sequence="40"/>
</odoo>
